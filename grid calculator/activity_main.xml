<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="73px"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:orientation="vertical"
        app:rowCount="5">

        <Button
            android:id="@+id/bper"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btc"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/bspace"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BS"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/bdiv"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/bmul"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/b9"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/b8"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/b7"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/b4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/b5"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/b6"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/bsub"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/badd"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/b3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/b2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="18dp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/b1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/b0"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="640dp"
            android:text="0"
            android:textSize="18dp"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="4" />

        <Button
            android:id="@+id/bdot"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="18dp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/bequal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="18dp"
            app:layout_column="3"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/bres"
        android:layout_width="409dp"
        android:layout_height="99dp"
        android:hint="0"
        android:textAlignment="viewEnd"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/bpres"
        android:layout_width="400dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toTopOf="@+id/bres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="100dp"
        android:text="CALCULATOR"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/bpres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>